/* 全局样式 */
page {
  background-color: #F8F9FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333333;
}

/* 容器样式 */
.container {
  padding: 0 30rpx;
  min-height: 100vh;
}

.page-container {
  padding: 20rpx 30rpx;
  min-height: calc(100vh - 120rpx);
}

/* 卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.card-content {
  color: #666666;
  line-height: 1.8;
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: none;
  outline: none;
}

.btn-primary {
  background: linear-gradient(135deg, #FF6B9D 0%, #FF8FA3 100%);
  color: #FFFFFF;
}

.btn-primary:active {
  background: linear-gradient(135deg, #E55A8A 0%, #E57A90 100%);
}

.btn-secondary {
  background: #F0F0F0;
  color: #666666;
}

.btn-secondary:active {
  background: #E0E0E0;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #FF6B9D;
  color: #FF6B9D;
}

.btn-outline:active {
  background: rgba(255, 107, 157, 0.1);
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 24rpx;
}

.btn-large {
  padding: 32rpx 60rpx;
  font-size: 32rpx;
}

.btn-block {
  width: 100%;
}

.btn-disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  padding: 24rpx 30rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333333;
  background: #FFFFFF;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #FF6B9D;
  outline: none;
}

.input-field::placeholder {
  color: #CCCCCC;
}

/* 列表样式 */
.list {
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  transition: background-color 0.3s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #F8F9FA;
}

.list-item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  color: #FF6B9D;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.list-item-desc {
  font-size: 24rpx;
  color: #999999;
}

.list-item-arrow {
  width: 24rpx;
  height: 24rpx;
  color: #CCCCCC;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.tag-primary {
  background: rgba(255, 107, 157, 0.1);
  color: #FF6B9D;
}

.tag-success {
  background: rgba(52, 199, 89, 0.1);
  color: #34C759;
}

.tag-warning {
  background: rgba(255, 149, 0, 0.1);
  color: #FF9500;
}

.tag-danger {
  background: rgba(255, 59, 48, 0.1);
  color: #FF3B30;
}

/* 头像样式 */
.avatar {
  border-radius: 50%;
  overflow: hidden;
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
}

.avatar-medium {
  width: 80rpx;
  height: 80rpx;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #F0F0F0;
  margin: 30rpx 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 30rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
}

.loading-text {
  margin-left: 20rpx;
  color: #999999;
  font-size: 24rpx;
}

/* 工具类 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.text-primary {
  color: #FF6B9D;
}

.text-success {
  color: #34C759;
}

.text-warning {
  color: #FF9500;
}

.text-danger {
  color: #FF3B30;
}

.text-muted {
  color: #999999;
}

.bg-primary {
  background-color: #FF6B9D;
}

.bg-light {
  background-color: #F8F9FA;
}

.bg-white {
  background-color: #FFFFFF;
}

