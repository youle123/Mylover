<!--提醒管理页面-->
<view class="page">
  <view class="page-header">
    <text class="page-title">提醒管理</text>
    <button class="btn btn-primary btn-small" bindtap="navigateToAddReminder">
      <text class="icon">+</text>
      添加提醒
    </button>
  </view>

  <view class="reminders-list" wx:if="{{reminders.length > 0}}">
    <view class="reminder-item" wx:for="{{reminders}}" wx:key="id">
      <view class="reminder-icon">{{item.icon}}</view>
      <view class="reminder-content">
        <text class="reminder-title">{{item.title}}</text>
        <text class="reminder-time">{{item.time}}</text>
        <text class="reminder-repeat">{{item.repeat}}</text>
      </view>
      <switch checked="{{item.enabled}}" bindchange="onToggleReminder" data-id="{{item.id}}"/>
    </view>
  </view>

  <view class="empty-state" wx:else>
    <image class="empty-image" src="/images/empty-reminder.png" mode="aspectFit"></image>
    <text class="empty-title">暂无提醒</text>
    <button class="btn btn-primary" bindtap="navigateToAddReminder">添加提醒</button>
  </view>
</view>
