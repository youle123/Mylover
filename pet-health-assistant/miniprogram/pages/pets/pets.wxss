/* 宠物管理页面样式 */

.page {
  background-color: var(--bg-secondary);
  min-height: 100vh;
  padding: var(--spacing-md);
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
  padding: var(--spacing-md) 0;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.page-header .btn {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.page-header .icon {
  font-size: 24rpx;
}

/* 宠物列表 */
.pets-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.pet-item {
  display: flex;
  align-items: center;
  background-color: var(--bg-primary);
  border-radius: var(--border-radius-large);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
}

.pet-item:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-medium);
}

.pet-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: var(--spacing-lg);
  border: 4rpx solid var(--primary-color);
}

.pet-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.pet-basic {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.pet-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.pet-status {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  color: var(--text-white);
}

.status-good {
  background-color: var(--success-color);
}

.status-warning {
  background-color: var(--warning-color);
}

.pet-breed {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.pet-weight {
  font-size: 22rpx;
  color: var(--text-disabled);
}

/* 宠物操作按钮 */
.pet-actions {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: var(--bg-light);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.9);
  background-color: var(--border-light);
}

.action-btn .icon {
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xxl) var(--spacing-md);
  text-align: center;
  min-height: 60vh;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: var(--spacing-lg);
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.empty-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: var(--spacing-xl);
  max-width: 400rpx;
}

/* 加载状态 */
.loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: var(--text-white);
  padding: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--border-radius-medium);
  z-index: 1000;
}
