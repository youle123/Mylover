<!--健康记录页面-->
<view class="page">
  <view class="page-header">
    <text class="page-title">健康记录</text>
    <button class="btn btn-primary btn-small" bindtap="navigateToAddRecord">
      <text class="icon">+</text>
      添加记录
    </button>
  </view>

  <!-- 宠物选择器 -->
  <view class="pet-selector" wx:if="{{pets.length > 0}}">
    <picker range="{{petNames}}" value="{{selectedPetIndex}}" bindchange="onPetChange">
      <view class="selector">
        <text>{{selectedPet.name || '选择宠物'}}</text>
        <text class="icon">▼</text>
      </view>
    </picker>
  </view>

  <!-- 健康记录列表 -->
  <view class="records-list" wx:if="{{records.length > 0}}">
    <view class="record-item" wx:for="{{records}}" wx:key="id">
      <view class="record-date">{{item.date}}</view>
      <view class="record-content">
        <text class="record-type">{{item.type}}</text>
        <text class="record-desc">{{item.description}}</text>
        <text class="record-value" wx:if="{{item.value}}">{{item.value}}</text>
      </view>
    </view>
  </view>

  <!-- 空状态 -->
  <view class="empty-state" wx:else>
    <image class="empty-image" src="/images/empty-record.png" mode="aspectFit"></image>
    <text class="empty-title">暂无健康记录</text>
    <text class="empty-desc">开始记录您宠物的健康数据</text>
    <button class="btn btn-primary" bindtap="navigateToAddRecord">添加记录</button>
  </view>
</view>
